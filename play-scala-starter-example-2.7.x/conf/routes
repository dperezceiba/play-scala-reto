# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller download file
GET     /download                           controllers.HomeController.download
# Post error test
POST    /errortest     						controllers.HomeController.error

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)

# Post calculator add
POST    /calculator/add     				controllers.CalculatorController.add

# Post calculator subtract
POST    /calculator/subtract     			controllers.CalculatorController.subtract

# Post calculator multiply
POST    /calculator/multiply     			controllers.CalculatorController.multiply

# Post calculator divide
POST    /calculator/divide     				controllers.CalculatorController.divide

# GET PERSON BY ID
GET    /persons/:id      				 	controllers.PersonController.findById(id: Long)

# GET PERSONS BY Name
GET     /persons							controllers.PersonController.findAllByName(name: Option[String])

# Post calculator divide
POST    /persons     						controllers.PersonController.save