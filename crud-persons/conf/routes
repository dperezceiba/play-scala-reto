# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Save a person
POST    /persons     				controllers.PersonController.save

# Find person by Id
GET 	/persons/:id				controllers.PersonController.findById(id: Long)

# Delete person by Id
DELETE	/persons/:id				controllers.PersonController.delete(id: Long)

# Update person by id
PUT 	/persons/:id				controllers.PersonController.update(id: Long)

# Find all persons
GET 	/persons					controllers.PersonController.findAll
